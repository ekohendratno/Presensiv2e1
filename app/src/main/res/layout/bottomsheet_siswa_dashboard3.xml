<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/a"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="0dp"
        android:elevation="0dp"
        app:cardElevation="1dp"
        android:background="@android:color/background_light">

        <LinearLayout
            android:id="@+id/main_row"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:paddingLeft="@dimen/list_vertical_margin"
                android:paddingRight="@dimen/list_vertical_margin"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">


                <LinearLayout
                    android:orientation="vertical"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:text="Presensi"
                        android:fontFamily="sans-serif"
                        android:textColor="@color/colorTextThird"
                        android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title" />

                </LinearLayout>


                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/action_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginBottom="16dp"
                    app:backgroundTint="#F44336"
                    app:elevation="0dp"
                    app:fabSize="mini"
                    app:rippleColor="#ffffff"
                    app:srcCompat="@drawable/ic_baseline_close_24" />


            </RelativeLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_weight="1"
            android:id="@+id/presensiMasuk"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="@dimen/list_vertical_margin"
            android:background="?selectableItemBackgroundBorderless">
            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:src="@drawable/checklist"
                    android:background="@drawable/circle"
                    android:padding="10dp"
                    android:layout_width="64dp"
                    android:layout_height="64dp"/>
                <TextView
                    android:textSize="18dp"
                    android:fontFamily="sans-serif-light"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="4.0dip"
                    android:layout_marginBottom="4.0dip"
                    android:text="Masuk"
                    style="@style/text_label_grid" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:id="@+id/presensiPulang"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="@dimen/list_vertical_margin"
            android:background="?selectableItemBackgroundBorderless">
            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:src="@drawable/campus"
                    android:background="@drawable/circle"
                    android:padding="10dp"
                    android:layout_width="64dp"
                    android:layout_height="64dp"/>
                <TextView
                    android:textSize="18dp"
                    android:fontFamily="sans-serif-light"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="4.0dip"
                    android:text="Pulang"
                    style="@style/text_label_grid" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>