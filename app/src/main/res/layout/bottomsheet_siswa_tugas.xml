<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:id="@+id/a"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="0dp"
        android:elevation="0dp"
        app:cardElevation="1dp"
        android:background="@android:color/background_light">

        <LinearLayout
            android:id="@+id/main_row"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:paddingLeft="@dimen/list_vertical_margin"
                android:paddingRight="@dimen/list_vertical_margin"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">


                <LinearLayout
                    android:orientation="vertical"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:text="Detail Tugas"
                        android:fontFamily="sans-serif"
                        android:textColor="@color/colorTextThird"
                        android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title" />

                </LinearLayout>


                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fab_close"
                    android:layout_gravity="center"
                    android:layout_marginBottom="16dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    app:srcCompat="@drawable/ic_baseline_close_24"
                    app:rippleColor="#ffffff"
                    app:backgroundTint="#F44336"
                    app:fabSize="mini"
                    app:elevation="0dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </RelativeLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.core.widget.NestedScrollView
        android:scrollbars="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        xmlns:app="http://schemas.android.com/apk/res-auto">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/editKey"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/editKey2"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/editFile"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:orientation="vertical"
                android:padding="@dimen/list_vertical_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Senin, 24 Oktober 2021"
                    android:fontFamily="sans-serif"
                    android:textSize="14dp"
                    android:textColor="@color/colorTextThird"
                    android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title" />

                <TextView
                    android:id="@+id/tv2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kerjakan materi ke 1 dan kedua kumpul dalam bentuk foto"
                    android:fontFamily="sans-serif"
                    android:textSize="18dp"
                    android:textColor="@color/colorTextThird"
                    android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title" />

                <TextView
                    android:id="@+id/tv3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="90 poin"
                    android:fontFamily="sans-serif"
                    android:textSize="16dp"
                    android:textColor="@color/colorTextThird"
                    android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title" />

                <View
                    android:layout_marginTop="@dimen/activity_horizontal_margin"
                    android:layout_marginBottom="@dimen/activity_horizontal_margin"
                    android:layout_below="@+id/main_row"
                    style="@style/divider" />

                <TextView
                    android:id="@+id/tv4"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Petunjuk tulis secara singkat"
                    android:fontFamily="sans-serif"
                    android:textSize="16dp"
                    android:textColor="@color/colorTextThird"
                    android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title" />




                <androidx.cardview.widget.CardView
                    android:visibility="gone"
                    android:id="@+id/lyCard"
                    app:cardElevation="1dp"
                    app:cardCornerRadius="8dp"
                    android:layout_marginBottom="@dimen/list_vertical_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/colorWindowBackgroundWhite">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:layout_weight="1"
                            android:layout_gravity="center_vertical"
                            android:paddingLeft="4dp"
                            android:paddingTop="@dimen/activity_vertical_margin"
                            android:paddingBottom="@dimen/activity_vertical_margin"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <info.androidhive.fontawesome.FontTextView
                                android:id="@+id/imageView1Card"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:padding="8.0dip"
                                android:layout_width="42dp"
                                android:layout_height="42dp"
                                android:layout_centerVertical="true"
                                android:text="@string/fa_file"
                                android:textColor="@color/colorPrimary"
                                android:textSize="24dp"
                                app:solid_icon="true" />

                            <RelativeLayout
                                android:layout_toRightOf="@+id/imageView1Card"
                                android:layout_marginLeft="8dp"
                                android:layout_centerVertical="true"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:text="Judul"
                                    android:textSize="16dp"
                                    android:textColor="@color/colorTextThird"
                                    android:fontFamily="sans-serif-light"
                                    android:id="@+id/tv1Card"
                                    android:layout_marginBottom="4.0dip"
                                    android:layout_width="match_parent"
                                    android:layout_weight="1"
                                    android:width="0dp"
                                    android:layout_height="wrap_content" />

                            </RelativeLayout>

                        </RelativeLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:id="@+id/lyJawaban"
                    android:background="#10000000"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/editText"
                        android:hint="Jawaban singkat"
                        android:background="@android:color/transparent"
                        android:layout_weight="1"
                        android:padding="15dp"
                        android:focusable="true"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/fab_upload"
                        android:layout_gravity="top|center"
                        app:srcCompat="@drawable/ic_baseline_attach_file_24"
                        android:padding="15dp"
                        android:background="?selectableItemBackgroundBorderless"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:gravity="right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/action_send"
                    android:layout_gravity="right"
                    android:layout_margin="@dimen/activity_vertical_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:backgroundTint="@color/colorSakit"
                    android:text="KIRIM" />
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>